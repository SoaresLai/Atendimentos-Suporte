@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass-card text-center">
                <div class="card-body p-5">
                    <i class="fas fa-ban fa-4x text-danger mb-4"></i>
                    <h2 class="text-danger mb-3">Acesso Negado</h2>
                    <p class="text-muted mb-4">
                        Você não tem permissão para acessar esta página ou recurso.
                    </p>
                    <div class="d-flex gap-3 justify-content-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Voltar ao Dashboard
                        </a>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fas fa-sign-out-alt me-2"></i>Fazer Logout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
